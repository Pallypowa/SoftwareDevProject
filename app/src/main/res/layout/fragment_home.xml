<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trans_green"
    tools:context=".Fragments.HomeFragment">


    <TextClock
        android:id="@+id/timeViewClock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:ellipsize="none"
        android:fontFamily="sans-serif-smallcaps"
        android:format24Hour="hh:mm"
        android:gravity="center_vertical|center_horizontal"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:textColor="#fff"
        android:textSize="80sp"
        android:timeZone="GMT+1" />

    <TextView
        android:id="@+id/nextClass"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@id/timeViewClock"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="Next class"
        android:textColor="@android:color/black"
        android:textSize="40sp" />
    <Button
        android:id="@+id/mapBtn"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@id/nextClass"
        android:layout_centerHorizontal="true"
        android:text="MAP"
        android:textSize="20sp"/>

</RelativeLayout>